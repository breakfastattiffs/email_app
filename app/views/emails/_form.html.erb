<%= form_for(@email, html: {:class => 'form-horizontal'}) do |f| %>
    <% if @email.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:</h2>

          <ul>
            <% @email.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <div class="field" id="email_to_field">
        <%= f.label :to, :class => "col-sm-1 control-label" %>
        <div class="col-sm-11">
          <%= f.text_field :to, :class => 'form-control' %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= f.label :subject, :class => "col-sm-1 control-label" %>
        <div class="col-sm-11">
          <strong>
            <%= f.text_field :subject, :class => 'form-control' %>
          </strong>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <div class="col-sm-12">
          <%= f.text_area :body, :class => 'form-control', :rows => 15 %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <div class="col-sm-12">
            <%= f.file_field :attachment, :multiple => true %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <div class="field">
        <div class="col-sm-offset-10 col-sm-2">

          <div class="actions">
            <%= f.submit("Send", :class => "btn btn-primary btn-block") %>
          </div>
        </div>
      </div>
    </div>

<% end %>
